{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "declaration": true,
    "outDir": "./dist/",
    "rootDir": "./libs/",
    "lib": [ "esnext"],
    "strict": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "pretty": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "libs/"
  ],
  "exclude": [
    "__tests__",
    "docs",
    "node_modules",
    "./dist",
    "./index.js",
    "examples/"
  ]
}