{
  "name": "@ask-utils/handlers",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "tsc": "tsc",
    "test": "jest",
    "lint": "eslint 'libs/**/*.{ts,tsx}'",
    "doc": "typedoc --out docs libs/",
    "postversion": "git push origin $(git describe --abbrev=0 --tags)",
    "test:watch": "jest --watch",
    "test:dev": "jest --watch --silent=false --verbose false --coverage"
  },
  "author": "Hidetaka Okamoto <info@wp-kyoto.net> (https://wp-kyoto.net)",
  "license": "MIT",
  "devDependencies": {
    "rollup": "^1.16.7",
    "rollup-plugin-typescript2": "^0.21.2",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "ask-utils": "^2.3.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "Alexa",
    "ASK SDK",
    "Request Handlers",
    "ask-utils"
  ],
  "directories": {
    "lib": "libs",
    "test": "__tests__"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*/*.+(ts|tsx|js)",
      "**/__tests__/**/*.+(ts|tsx|js)"
    ]
  }
}
